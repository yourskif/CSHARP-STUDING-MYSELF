@model List<My._001_SimpleApp.Models.Product>

<h2>Product List</h2>

@if (Model == null || !Model.Any())
{
    <p>No products found.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>#</th>
                <th>Name</th>
                <th>Price</th>
                <th>Category</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.Name</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.Category</td>
                </tr>
            }
        </tbody>
    </table>
}
